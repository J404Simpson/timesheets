generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // url moved to prisma.config.cjs for Prisma 7+
}

model User {
  id          Int         @id @default(autoincrement())
  azureSub    String      @unique
  email       String?
  displayName String?
  timesheets  TimeSheet[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model TimeSheet {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  date       DateTime
  hours      Float
  project    String?
  notes      String?
  status     String   @default("draft")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userId])
  @@index([date])
}