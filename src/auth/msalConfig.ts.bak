import { PublicClientApplication, Configuration, LogLevel } from "@azure/msal-browser";

const clientId = import.meta.env.VITE_AAD_CLIENT_ID as string;
const tenantId = import.meta.env.VITE_AAD_TENANT_ID as string;
const apiScope = (import.meta.env.VITE_AAD_API_SCOPE as string) || "";

if (!clientId || !tenantId) {
  console.warn("VITE_AAD_CLIENT_ID and VITE_AAD_TENANT_ID must be set in environment variables.");
}

const msalConfig: Configuration = {
  auth: {
    clientId,
    authority: `https://login.microsoftonline.com/${tenantId}`,
    redirectUri: window.location.origin
  },
  system: {
    loggerOptions: {
      loggerCallback: (level, message, containsPii) => {
        if (containsPii) return;
        switch (level) {
          case LogLevel.Error:
            console.error(message);
            break;
          case LogLevel.Info:
            console.info(message);
            break;
          case LogLevel.Verbose:
            console.debug(message);
            break;
          case LogLevel.Warning:
            console.warn(message);
            break;
          default:
            console.log(message);
        }
      }
    }
  }
};

const msalInstance = new PublicClientApplication(msalConfig);

// scopes used for interactive login / token acquisition
export const loginRequest = {
  scopes: ["openid", "profile", "email", apiScope].filter(Boolean) as string[]
};

export const protectedResources = {
  timesheetApi: {
    scope: apiScope
  }
};

export default msalInstance;